<%
  var _params = typeof params === 'undefined' ? {} : params;
  var customTools = typeof listTools === 'undefined' ? '' : listTools;
%>
<div class="list-tools">
    <button id="select-btn" class="btn btn-info"><%=__('Выбрать')%></button>
    <button class="reload-btn btn btn-default" title="<%=__('Обновить')%>"><span class="fa fa-refresh"></span></button>
    <% if (permissions[Permissions.WRITE]) { %>
    <button class="create-btn btn btn-success" <% if (_params.actionCreate) { %>data-url="<%= _params.actionCreate %>"<% } %> title="<%=__('Создать')%>"><%=__('Создать')%></button>
    <button class="edit-btn btn btn-primary" <% if (_params.actionUpdate) { %>data-url="<%= _params.actionUpdate %>"<% } %>title="<%=__('Редактировать')%>"><%=__('Править')%></button>
    <% } %>
    <% if (permissions[Permissions.DELETE]) { %>
    <button class="delete-btn btn btn-danger" title="<%=__('Удалить')%>"><%=__('Удалить')%></button>
    <% } %>
    <%- blocks.customTools %>
</div>